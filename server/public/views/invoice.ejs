<html>
  <head>
    <meta charset="UTF-8" />
    <title>Editable Invoice</title>
    <link rel="stylesheet" href="css/print.css" media="print" />
    <script>
      function printFunction() {
        window.print();
      }
    </script>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,600;1,700&display=swap");

      * {
        margin: 0;
        padding: 0;
        font-family: "Montserrat", sans-serif;
      }

      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        font-family: "Open Sans";
      }

      body {
        padding: 0;
        margin: 0;
      }

      table,
      tr,
      td,
      th {
        border-collapse: collapse;
        font-size: 14px;
      }

      td,
      th {
        padding: 7px;
      }

      .items-table,
      .items-table tr,
      .items-table th,
      .items-table td {
        border: 1px solid #ddd;
      }

      .items-table th {
        background: #ccc;
      }

      p {
        margin: 0;
        padding: 0;
      }

      table {
        width: 100%;
        padding: 0;
        margin: 0;
      }
    </style>
  </head>

  <body
    style="width: 70%; margin: 0px auto; font-family: 'Montserrat', sans-serif"
  >
    <table>
      <tr>
        <td>
          <table style="width: 100%">
            <tr>
              <td>
                <img width="25%" height="100px" src="<%= images['logo'] %>" />
              </td>
            </tr>
            <tr>
              <td style="text-align: right">
                <strong>Invoice Number</strong>: <%=
                information['invoice_number'] %><br />
                <strong>Inovice Date</strong>:<%= information['date'] %><br />
              </td>
            </tr>
          </table>
          <table>
            <tr>
              <td>
                <p>
                  <strong>Sold By :</strong><br />
                  <%= company_details[ 'name'] %><br />
                  <%= company_details[ 'address'] %><br />
                  <%= company_details[ 'city'] %> <%= company_details[ 'zip']
                  %><br />
                  <strong>Country</strong>: <%= company_details[ 'country'] %>
                </p>
              </td>
              <td style="text-align: right">
                <p>
                  <strong>Billing Address</strong><br />
                  <%= client['name'] %><br />
                  <%= client['address'] %><br />
                  <%= client['city'] %> <%= client['zip'] %><br />
                  <strong>Country</strong>: <%= client['country'] %>
                </p>
              </td>
            </tr>
            <tr>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <td></td>
              <td></td>
            </tr>
          </table>

          <table class="items-table">
            <tr>
              <th>S.No.</th>
              <th>Description</th>
              <th>Quantity</th>
              <th>Price <%= settings['currency'] %></th>
            </tr>

            <% if(products.length > 0) { %> <%
            products.forEach(function(item,itemcount){ %>
            <tr>
              <td align="center"><%= itemcount+1 %></td>
              <td align="center"><%= item['description'] %></td>
              <td align="center"><%= item['quantity'] %></td>
              <td align="center"><%= item['price'] %></td>
            </tr>
            <% }); %> <% } %>

            <tr>
              <td colspan="3"><strong>Sub Total</strong></td>

              <td>
                <%= settings['currency'] %> <%= information['sub_total'] %>
              </td>
            </tr>

            <tr>
              <td colspan="3"><strong>Discount</strong></td>

              <td>
                <%= settings['currency'] %> <%= information['discount'] %>
              </td>
            </tr>
            <tr>
              <td colspan="3">
                <strong><%= settings['tax-notation'] %></strong>
              </td>
              <td><% if(information['tax']) { %> 5% <% }else{ %> - <% }%></td>
            </tr>
            <tr>
              <td colspan="3"><strong>Total</strong></td>

              <td><%= settings['currency'] %> <%= information['total'] %></td>
            </tr>
          </table>
          <table>
            <tr>
              <td>
                <!-- <p style="font-size: 12px">Whether tax is payable under reverse charge - No</p> -->
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
    <br />
    <button onclick="printFunction()">Print</button>
  </body>
</html>
